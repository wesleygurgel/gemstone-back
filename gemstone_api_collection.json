              "raw": "{{base_url}}/api/v1/products/products/?category=jewelry&available=true",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products", "products"],
              "query": [
                {
                  "key": "category",
                  "value": "jewelry"
